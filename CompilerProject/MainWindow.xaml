<Window x:Class="CompilerProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Rules}" AcceptsReturn="True"/>
        <TextBox Text="{Binding Input}" Grid.Column="1" AcceptsReturn="True"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button  Padding="5" Margin="10" Width="100" Click="Compile_Click">Compile</Button>
            <Button  Padding="5" Margin="10" Width="100" Click="Process_Click">Process</Button>
            
        </StackPanel>
    </Grid>
</Window>
